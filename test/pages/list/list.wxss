.app {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.header text {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  border-bottom: 1px solid #fff;
}

.header text.active {
  border-bottom: 1px solid #c0c0c0;
}

.main {
  width: 100%;
  flex: 1;
  background: #f1f1f1;
  padding: 20rpx;
  box-sizing: border-box;
}

.content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
}
